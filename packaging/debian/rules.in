builddir/Makefile:
	dh_testdir
	# Add here commands to configure the package.
	mkdir -p builddir
	cd builddir && cmake .. -G'Unix Makefiles' -DENABLE_LIBBACKTRACE_TEST=true -DBACKTRACE_SUPPORTS_DATA=true -DCMAKE_INSTALL_PREFIX=$(CURDIR)/debian/@PPA_NAME@@PPA_INSTALL_PATH@

build: build-stamp

build-stamp:  builddir/Makefile 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE) @PPA_THREADS_SWITCH@ -C builddir
	# $(MAKE) -C builddir xqdoc sausaxqdoc
	#docbook-to-man debian/zorba.sgml > zorba.1

	touch $@

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp 

	# Add here commands to clean up after the build process.
	rm -rf builddir


	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep  
	dh_installdirs

	# Add here commands to install the package into debian/sausalito-coresdk.
	cd builddir && make install
	#@PPA_INSTALL_COMMAND@
	#$(MAKE) doc

# Build architecture-independent files here.
binary-indep: install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: install
	dh_testdir
	dh_testroot
#	dh_installchangelogs ChangeLog
#	dh_installdocs
#	dh_installexamples
#	dh_install
#	dh_installmenu
