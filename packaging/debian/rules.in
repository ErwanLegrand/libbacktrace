#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo info.txt
#	dh_installman
	dh_link "@PPA_INSTALL_PATH@" "/usr"
#	dh_strip --dbg-package=@PPA_NAME@-dbg
	dh_compress
	dh_fixperms
#	dh_perl
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps -l$(CURDIR)/debian/@PPA_NAME@@PPA_INSTALL_PATH@/lib
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install

